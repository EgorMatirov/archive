<% c++ #include "bacs/archive/web/content/form.hpp" %>
<% skin plain %>
    <% view available uses bacs::archive::web::content::available extends base_form %>
        <% template form() %>
            <p><% gt "Get available problems" %></p>
            <form method="post" action="">
                <% form as_p form %>
            </form>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% foreach id in result.get() %>
                    <% gt "The following problems are available:" %>
                    <ul>
                        <% item %>
                            <li><%= id %></li>
                        <% end %>
                    </ul>
                <% empty %>
                    <% gt "There are no problems available." %>
                <% end %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
