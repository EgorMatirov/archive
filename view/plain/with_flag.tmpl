<% c++ #include "bacs/archive/web/content/form.hpp" %>
<% skin plain %>
    <% view with_flag uses bacs::archive::web::content::with_flag extends base_form %>
        <% template form() %>
            <p><% gt "Get problems with flag" %></p>
            <form method="post" action="">
                <% form as_p form %>
            </form>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% foreach id in result.get() %>
                    <% gt "The following problems has specified flag:" %>
                    <ul>
                        <% item %>
                            <li><%= id %></li>
                        <% end %>
                    </ul>
                <% end %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
