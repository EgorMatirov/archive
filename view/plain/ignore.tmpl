<% c++ #include "bacs/archive/web/content/form.hpp" %>
<% skin plain %>
    <% view ignore uses bacs::archive::web::content::ignore extends base_form %>
        <% template form() %>
            <p><% gt "Ignore problems from archive" %></p>
            <% form as_p form %>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% foreach id in result.get() %>
                    <% gt "The following problems are ignored:" %>
                    <ul>
                        <% item %>
                            <li><%= id %></li>
                        <% end %>
                    </ul>
                <% end %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
