<% c++ #include "bacs/archive/web/content/form.hpp" %>
<% skin plain %>
    <% view clear_flags uses bacs::archive::web::content::clear_flags extends base_form %>
        <% template form() %>
            <p><% gt "Clear problems flags" %></p>
            <% form as_p form %>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% foreach id in result.get() %>
                    <% gt "Flags were cleared for the following problems:" %>
                    <ul>
                        <% item %>
                            <li><%= id %></li>
                        <% end %>
                    </ul>
                <% end %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
